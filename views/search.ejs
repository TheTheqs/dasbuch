<%- include('partials/header') %>
<div class="container mt-2 mb-5">
    <h2 class="text-center mb-4">Buscar Review</h2>
    <form action="/result" method="get">
      <div class="mb-3">
        <label for="nomeLivro" class="form-label">Nome do Livro</label>
        <input type="text" id="nomeLivro" name="nomeLivro" class="form-control">
      </div>
      <div class="mb-3">
        <label for="nomeAutor" class="form-label">Nome do Autor</label>
        <input type="text" id="nomeAutor" name="nomeAutor" class="form-control">
      </div>
      <div class="mb-3">
        <label for="genero" class="form-label">Gênero</label>
        <input type="text" id="genero" name="genero" class="form-control">
      </div>
      <div class="row mb-3">
        <div class="col-md-6">
          <label for="nota" class="form-label">Nota</label>
          <input type="number" id="nota" name="nota" class="form-control" min="1" max="5">
        </div>
        <div class="col-md-6">
          <label for="comparacao" class="form-label">Comparação</label>
          <select id="comparacao" name="comparacao" class="form-select">
            <option value="maior">Maior que</option>
            <option value="menor">Menor que</option>
            <option value="igual" selected>Igual a</option>
          </select>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-md-6">
          <label for="dataInicial" class="form-label">Data Inicial (Mês/Ano)</label>
          <input type="month" id="dataInicial" name="dataInicial" class="form-control">
        </div>
        <div class="col-md-6">
          <label for="dataFinal" class="form-label">Data Final (Mês/Ano)</label>
          <input type="month" id="dataFinal" name="dataFinal" class="form-control">
        </div>
      </div>
      <div class="text-center mb-5">
        <button type="submit" class="btn btn-primary me-2 mb-5">Enviar</button>
        <button type="reset" class="btn btn-secondary mb-5">Limpar</button>
      </div>
    </form>
</div>
<%- include('partials/footer') %>