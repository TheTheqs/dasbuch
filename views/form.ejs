<%- include('partials/header') %>
<form action="/add" method="POST" class="container mt-2 mb-5">
  <h2 class="text-center mb-4"><%=translator.AddReview%></h2>
  <div class="row mb-3">
    <div class="col-md-8">
      <label for="title" class="form-label fs-5 text-secondary"><%=translator.Title%></label>
      <input type="text" id="title" name="title" class="form-control" maxlength="50" required>
    </div>
    <div class="col-md-4">
      <label for="language" class="form-label fs-5 text-secondary"><%=translator.Language%></label>
      <select id="language" name="language" class="form-control" required>
        <option value="pt"><%=translator.PT%></option>
        <option value="en"><%=translator.EN%></option>
        <option value="el"><%=translator.EL%></option>
        <option value="de"><%=translator.DE%></option>
      </select>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-4">
      <label for="genre" class="form-label fs-5 text-secondary"><%=translator.Genre%></label>
      <input type="text" id="genre" name="genre" class="form-control" maxlength="50" required>
    </div>
    <div class="col-md-4">
      <label for="score" class="form-label fs-5 text-secondary"><%=translator.Score%></label>
      <input type="number" id="score" name="score" class="form-control" min="0" max="5" value="0" required>
    </div>
    <div class="col-md-4">
      <label for="date" class="form-label fs-5 text-secondary"><%=translator.Date%></label>
      <input type="month" id="date" name="date" class="form-control" required>
    </div>
  </div>
  <div class="mb-3">
    <label for="commentary" class="form-label fs-5 text-secondary"><%=translator.Comment%></label>
    <textarea style="resize: none; width: 100%; height: 150px;" id="commentary" name="commentary" class="form-control" rows="4" maxlength="200" required></textarea>
  </div>
  <div class="text-center mt-4">
    <input class="btn btn-primary px-4" type="submit" value="<%=translator.Submit%>">
  </div>
</form>
<%- include('partials/footer') %>